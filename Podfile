# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'NJHuProject' do
  # Uncomment the next line if you're using Swift or would like to use dynamic frameworks
  # use_frameworks!

  # Pods for NJHuProject
  
  # 网络请求
  pod 'AFNetworking'
  
  # 下拉刷新
  pod 'MJRefresh'
  
  #字典转模型
  pod 'MJExtension'
  
  #用于适配
  pod 'Masonry'
  
  # 蒙版
  pod 'MBProgressHUD'

  # 低耦合集成TabBarController
  pod 'CYLTabBarController'
  
  # YYKit
  pod 'YYText'
  pod 'YYImage'
  pod 'YYCategories'
  
  # 键盘管理
  pod 'IQKeyboardManager'
  
  # 全局滑动
  pod 'FDFullscreenPopGesture'
  
  # 三级联动 时间 地址
  pod 'MOFSPickerManager'
  
  # toast
  pod 'Toast'
  
  # 数据存储
  pod 'GVUserDefaults'
  
  # 照片
  pod 'TZImagePickerController'
  
  # 占位图
  pod 'DZNEmptyDataSet'
  
  target 'NJHuProjectTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'NJHuProjectUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
